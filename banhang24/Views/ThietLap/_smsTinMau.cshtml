<div class="modal fade in" id="exampleModalMauTin" tabindex="-1"  aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog draggable modal-md">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
                <h4 class="modal-title txtEditThemMauTin">Thêm mới tin mẫu</h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12">
                    <p id="message_error_dathang" class="text-right" style="color:red;"></p>
                    <div class="form-group floatleft">
                        <label>Loại tin (<span style="color:red">*</span>) </label>
                        <div class="form-news">
                            <select class="form-control" id="ddlLoaiTin" data-bind="options: LoaiTins, optionsValue: 'value',
                                   optionsCaption: 'Chọn loại tin', optionsText: 'TenLoai', value: selectedLoaiTin">
                            </select>
                        </div>
                    </div>
                    <div class="form-group floatleft">
                        <label>Nội dung tin</label>
                        <div class="form-news">
                            <textarea type="text" rows="4" id="txtNoiDungMauTin"></textarea>
                        </div>
                    </div>
                    <div class="floatleft">
                        <label><input type="checkbox" value="checked" id="checkLaMacDinh" /> Là mặc định</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="container-fluid">
                    
                        <button type="button" class="btn btn-cancel" data-dismiss="modal"><i class="fa fa-ban"></i> Bỏ qua</button>
                        <button type="button" class="btn btn-save" data-bind="click: $root.AddMauTin"> <i class="fa fa-save"></i> Lưu</button>
                  
                </div>
            </div>
        </div>
    </div>
</div>
