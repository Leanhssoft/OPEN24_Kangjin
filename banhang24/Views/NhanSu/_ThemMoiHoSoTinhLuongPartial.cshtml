@using Model
<!--Not use: change = ThemMoiBangLuong-->
    <div class="modal fade in" id="modalThemMoiBangLuong">
        <div class="modal-dialog draggable  modal-md ">
            <div class="modal-content  ui-draggable">
                <div class="modal-header ui-draggable-handle">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
                    <h4 class="modal-title">
                        {{TitlePopup}}
                    </h4>
                </div>
                <div class="modal-body" style="padding-right:0px;">
                    <div class="col-md-12  row">
                        <div class=" tab-news-modal ">
                            <div class="fl">
                                <div class="form-group ">
                                    <label> Mã </label>
                                    <div class="form-news">
                                        <input class="form-control" v-model="objectAddBangLuong.MaBangLuong" type="text" :disabled="!isNew"/>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label> Tên<span style="color:red">(*)</span></label>
                                    <div class="form-news">
                                        <input class="form-control" v-model="objectAddBangLuong.TenBangLuong" type="text" />
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label> Kỳ tính công <span style="color:red">(*)</span></label>
                                    <div class="form-news">
                                        <select class="form-control seleted-page" v-model="objectAddBangLuong.ID_KyTinhCong" :disabled="!isNew" id="selectKyTinhCong">
                                            <option v-for="(item, index) in listdata.KyTinhCong" v-bind:value="item.ID">
                                               {{item.Ky+' ( '+  commonStatisJs.convertDateTime(item.TuNgay) +' - ' + commonStatisJs.convertDateTime(item.DenNgay) +' )'}} 
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label> Ngày thanh toán</label>
                                    <div class="form-news">
                                        <input class="form-control   datetime" type="text" v-model="commonStatisJs.convertDateTime(objectAddBangLuong.NgayThanhToanLuong)" >
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label> Ghi chú</label>
                                    <div class="form-news">
                                       <textarea rows="2" v-model="objectAddBangLuong.GhiChu"></textarea>
                                    </div>
                                </div>
                                <div class="form-group ttc-right " style="position:relative;line-height: 24px;" v-if="role.PheDuyet">
                                    <input type="checkbox" style="margin-right: 5px; width:auto !important" v-model="objectAddBangLuong.TrangThai">Đã duyệt bảng lương
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 row">
                        <div class="modal-footer nopadding">
                            <button type="button" class="btn btn-cancel" data-dismiss="modal"><i class="fa fa-ban"></i>&nbsp;Bỏ qua</button>
                            <button type="button" class="btn btn-save" v-on:click="CreateBangLuong" v-show="!loadding">
                                <i class="fa fa-save" aria-hidden="true"></i> Lưu
                            </button>
                            <button type="button" class="btn btn-save" v-show="loadding">
                                <i class="fa fa-spinner fa-pulse  fa-fw"></i> Đang lưu
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="modalpopup_TinhLaiBangLuong">
    <div id="modalContainer_delete" class="modal-sm">
        <div class="modal-content ">
            <div class="modal-body">
                <div class="title-delete">
                    <span id="header-confirm-delete">Tính lại bảng lương</span>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>
                </div>
                Bạn có chắc chắn muốn tính lại bảng lương này <span style="font-weight:bold">{{objectAddBangLuong.TenBangLuong}}</span> không?
                <div class="modal-footer">
                    <button type="button" class="btn btn-main" v-on:click="SaveTinhLaiBangLuong"><i class="fa fa-check"></i> Đồng ý</button>
                    <button type="button" class="btn btn-cancel" data-dismiss="modal"><i class="fa fa-ban" tabindex="2"></i> Bỏ qua</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $.datetimepicker.setLocale('vi');
        $('.datetime').datetimepicker({
            timepicker: false,
            mask: true,
            format: 'd/m/Y',
        });
    })
</script>