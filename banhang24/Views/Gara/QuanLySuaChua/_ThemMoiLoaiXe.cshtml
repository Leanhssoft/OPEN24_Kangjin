@using banhang24.Hellper
<div class="modal fade" id="ThemMoiLoaiXe" tabindex="-1"  aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog draggable modal-xs" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{isNew ? 'Thêm mới loại xe' : 'Cập nhật loại xe'}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="material-icons">close</i></button>

            </div>
            <div class="modal-body" style="padding:15px;">
                <div class="gara-detail-information short-label">
                    <label>
                        Mã loại xe
                    </label>
                    <input placeholder="Mã tự động" class="form-control search-line" v-model="MaLoaiXe" />
                </div>
                <div class="gara-detail-information short-label">
                    <label>
                        Tên loại xe
                    </label>
                    <input class="form-control search-line" v-model="TenLoaiXe" autocomplete="off" autofocus />
                </div>
            </div>
            <div class="modal-footer">
                <div class="container-fluid">
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-cancel" v-if="!isNew && vmThemMoiXe.role.Xoa" v-on:click="Delete_LoaiXe">Xóa</button>
                    <button type="button" class="btn btn-save" v-on:click="AddNew_LoaiXe">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.ContentVersioned("~/Scripts/Gara/BanLamViec/vmHang_Loai_MauXe.js")"></script>
