<style>
    .toogle {
        float: right;
        height: 26px;
        background: #cacaca;
        border-radius: 15px;
        position: relative;
    }

    .gara-popup-chietkhau span.transverse {
        right: 7px;
    }

    .transverse {
        right: -46px;
        line-height: 28px;
        color: #fff;
    }

    .toogle-report.Ptram > .poison {
        color: #686868;
    }

    .gara-popup-chietkhau span.poison {
        left: 5px;
        font-size: 8px;
    }

    .poison {
        position: absolute;
        left: 05px;
        line-height: 27px;
        color: #747474;
        font-size: 8px;
    }

    .transverse {
        right: 8px;
        line-height: 28px;
