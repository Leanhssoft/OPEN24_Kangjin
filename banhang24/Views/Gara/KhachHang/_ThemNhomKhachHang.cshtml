        background: var(--color-main);
    }

    .gara-popup-chietkhau .toogle-report.active-re:before {
        left: 28px;
        background: var(--color-main);
    }

    .gara-popup-chietkhau .toogle-report:before {
        transition: left 0.4s ease;
        background: var(--color-main);
    }

