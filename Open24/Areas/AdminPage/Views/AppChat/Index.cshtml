@{
    ViewBag.Title = "Danh sách Người truy cập";
    Layout = "~/Areas/AdminPage/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/Knockout")
    <script src="~/Assets/js/Admin/AppChat.js"></script>
} 
<div class="right_col">
    <h3>Danh sách người dùng đang online</h3>
    <div class="panel panel-default" style=" height: 100%;">
        <div class="panel-heading" style="height: 60px;">
            @*<div class="pull-left">
                    <input type="text" class="form-control" data-bind="value:koSearch ,event: { keyup: SearchGrid }" placeholder="Tìm kiếm..">
                </div>
                <div class="pull-right">
                    @if (Model.RoleInsert)
                    {
                        <button class="btn-updata btn-green" data-bind="click: AddNewUser"><i class="fa fa-pencil-square-o"></i> Thêm mới người dùng</button>
                    }
                </div>*@
        </div>
        <div class="panel-body">
          <div class="table-reponsive">
              <table id="example" class="table table-striped table-bordered" cellspacing="0">
                  <thead>
                      <tr>
                          <th>IP</th>
                          <th>Đất nước</th>
                          <th>Tỉnh / Thành phố</th>
                          <th>Thiết bị</th>
                          <th>Hệ điều hành</th>
                          <th>Trình duyệt</th>
                          <th>Bắt đầu truy cập</th>
                          <th>#</th>
                      </tr>
                  </thead>
                  <tbody data-bind="foreach: listUserAppChat">
                      <tr>
                          <td data-bind="text: Ip"></td>
                          <td data-bind="text: Country"></td>
                          <td data-bind="text: City"></td>
                          <td data-bind="text: Device"></td>
                          <td data-bind="text: System"></td>
                          <td data-bind="text: Browser"></td>
                          <td data-bind="text: ConvertDate(CreateDate)"></td>
                          <td>
                              <div class="edit-delete">
                                  <a class="red" href="#" data-bind="click: $parent.ShowValue">
                                      <span class="glyphicon glyphicon-list-alt"></span>
                                  </a>
                              </div>
                          </td>
                      </tr>
                  </tbody>
              </table>
          </div>
        </div>
    </div>
</div>


<div class="modal fade" id="myModal">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color: black;">Thông tin chi tiết </h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Trang truy cập</th>
                            <th>Thời gian Online( phút )</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: listAppChatDetail">
                        <tr>
                            <td data-bind="text: Page"></td>
                            <td data-bind="text: Minute"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>