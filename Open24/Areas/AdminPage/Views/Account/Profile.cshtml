
@{
    ViewBag.Title = "Thông tin người dùng";
    Layout = "~/Areas/AdminPage/Views/Shared/_Layout.cshtml";
}
@section scripts {
    @Scripts.Render("~/bundles/Knockout")
    <script src="~/Assets/js/Admin/Account.Profile.js"></script>
    <script>
        $(function () {
            $("#datetimepicker").datetimepicker({
                format: 'MM/DD/YYYY'
            });
        });
    </script>
} 
<div class="right_col" role="main">
    <div class="addnews fl">
        <h3>Thông tin người dùng</h3>
        <div class="content-addnews fl">
            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Tài khoản</Span></div>
                <div class="col-md-9">
                    <input type="text" class="form-control"  data-bind="value: koUserName" />
                </div>

            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Mật khẩu hiện tại</Span></div>
                <div class="col-md-9">
                    <input type="password" class="form-control" data-bind="value: koPasswordOld" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Mật khẩu mới</Span></div>
                <div class="col-md-9">
                    <input type="password" class="form-control" data-bind="value: koPasswordNew" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Nhập lại mật khẩu mới</Span></div>
                <div class="col-md-9">
                    <input type="password" class="form-control" data-bind="value: koPasswordconfluent" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Nhóm quyền</Span></div>
                <div class="col-md-9">
                    <select class="form-control"id="selectUserGroup" disabled data-bind="options:UserGroupList, optionsText: 'GroupName', optionsValue: 'ID'"></select>
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Họ tên</Span></div>
                <div class="col-md-9">
                    <input type="text" class="form-control"  data-bind="value: koName" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Ngày sinh</Span></div>
                <div class="col-md-9">
                    <div class="container">
                        <div class="row">
                            <div class='col-sm-6'>
                                <input type='text' class="form-control" id='datetimepicker' />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Địa chỉ</Span></div>
                <div class="col-md-9">
                    <textarea class="form-control" rows="4"  data-bind="value: koAddress"></textarea>
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Email</Span></div>
                <div class="col-md-9">
                    <input type="text" class="form-control"  data-bind="value: koEmail" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><Span>Số điện thọai</Span></div>
                <div class="col-md-9">
                    <input type="text" class="form-control" data-bind="value: koPhone" />
                </div>
            </div>

            <div class="fl form-addnews">
                <div class="col-md-3 title-add"><label>&nbsp;</label></div>
                <div class="col-md-9">
                    <div class="pull-right">
                        <button class="btn-updata btn-green" id="saveImageFolder" data-bind="click: insertProfileUser"><i class="fa fa-floppy-o"></i> Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


