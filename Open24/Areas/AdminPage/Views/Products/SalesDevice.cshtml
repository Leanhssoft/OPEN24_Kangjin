                        <tr>
                            <th>Mã SP</th>
                            <th>Tên thiết bị</th>
                            <th>Người cập nhật</th>
                            <th>Ngày cập nhật</th>
                            <th>Số lượt mua</th>
                            <th>Trạng thái</th>
