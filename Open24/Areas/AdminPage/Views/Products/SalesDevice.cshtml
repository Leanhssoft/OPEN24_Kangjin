                            <td class="classSalesDevice" data-bind="text: ConvertDate(EditDate)"></td>
                            <td class="classSalesDevice" data-bind="text:ViewBuy"></td>
                            <td class="classSalesDevice" data-bind="text: ConvertTrangthai(Status)"></td>
