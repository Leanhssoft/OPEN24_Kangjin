        justify-content: center;
    }

    .op-tinhnang {
        display: flex;
        flex-wrap: wrap
    }

        .op-tinhnang > div {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
        }

            .op-tinhnang > div > * {
                margin: 5px;
            }

    .op-section-title {
        text-align: center;
        margin: 45px 0;
    }
    .op-description-body {
        display: block;
    }

    .op-description-toggle.arrow-up > i {
        transform: rotate(-180deg);
    }

    .op-description-toggle > i {
        transition: all 0.4s ease;
        transform: rotate(0);
    }

    .op-description {
        background: white;
        border-radius: 10px;
        border: 1px solid #D4EBFF;
        padding: 10px 3px;
        /*margin-bottom: 30px;*/
    }

    .op-description-title {
        color: black;
        font-size: 16px;
        font-weight: bold;
    }
</style>
@section scripts{
    <script>
        $(document).on('show', '.accordion', function (e) {
            $(e.target).prev('.accordion-heading').addClass('accordion-opened');
        });
        $(document).on('hide', '.accordion', function (e) {
            $(this).find('.accordion-heading').not($(e.target)).removeClass('accordion-opened');
        });
    </script>
}
