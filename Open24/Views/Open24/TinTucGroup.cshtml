
@{
    //ViewBag.Title = "Nhóm tin tức";
    
}
@section scripts{
    <script>

        vmNews.SetGroupNewsId(@ViewBag.CategoryId);
    </script>
}
<div id="renderNews">
    <section class="banner banner-prof  bn-img banner-news">
        <div class="container">
        </div>
    </section>
    <section class="banner">
        <div class="container">
            <div class="detail-customer">
                <div class="dt-cutomer-l">
                    <div class="title-viewnews fl">
                       Chuyên mục / {{curentpage.text}}
                    </div>
                    <div class="fl">
                        <ul class="page-tree-news">
                            <li class="" v-for="(item, index) in curentpage.data" v-show="curentpage.data.length>0">
                                <div class="img">
                                    <a href="javascript:void(0)" v-bind:href="item.Url">
                                        <img class="bor-radius" v-bind:src="item.Image" />
                                    </a>
                                </div>
                                <div class="news-content-title">
                                    <a href="javascript:void(0)" v-bind:href="item.Url">
                                        <h2 class="title-label">{{item.Title}}</h2>
                                        <span class="time-news-more">{{localValidate.convertDate(item.CreatDate)}}</span>
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="text-center fl"><a href="javascript:void(0)" class="btn-more" v-on:click="NextPageGroupNews" v-show="curentpage.ishow"> Xem thêm </a></div>
                </div>
                <div class="dt-cutomer-r">
                    <div class="title-viewnews fl">
                        Bài viết mới nhất
                    </div>
                    <ul class="list-tree-news">
                        <li v-for="(item, index) in listcurentolbar" v-show="listcurentolbar.length>0">
                            <a class="fl" href="javascript:void(0)" v-bind:href="item.Url">
                                <div class="img img-tol3-new">
                                    <img v-bind:src="item.Image" />
                                </div>
                                <div class="new-title">
                                    <p>{{item.Title}}</p>
                                    <span class="time-news-more">   {{localValidate.convertDate(item.CreatDate)}}</span>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <div class="view-news fl">
                        @Html.Partial("PageFacebookPartial")
                    </div>
                </div>

            </div>
        </div>
    </section>
    @Html.Partial("_WeareonePartial")
</div>

<script src="~/Assets/js/Client/open24/RenderNewVue.js"></script>