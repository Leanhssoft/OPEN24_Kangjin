
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = ViewBag.TenKhachHang;
}
@section scripts{
<script src="~/Content/js/moment.js"></script>
<script src="~/Assets/js/Client/Customer.Detail.js" type="text/javascript"></script>
}
@section FormDangky{
    @Html.Action("_cuahangdangky", new { area = "", controller = "home" })
}

@Html.Hidden("CustomerId",(int?)ViewBag.CustomerId,new { @id= "CustomerClientId" })

<div class="imgcustomer fl">
    <div class="container posrela">
    </div>
</div>


<div class="contentnews fl">
    <div class="container">
        <div class="row">
            <div class="col-md-9 news-recruitment">
                <div class="date-timenews">

                    <span><i class="fas fa-clock"></i></span> <span id="TitleDate" data-bind="text:CreatedDate"/>
                </div>
                <div class="title-detailnews fl" data-bind="text:nameCustomer">
                </div>
                <div class="summary-detailnews fl"data-bind="text:Note">
                </div>
                <div class="content-detailnews fl"  data-bind="html:Description">

                </div>
                <div class="content-detailnews fl">
                    <span style="float:right" data-bind="text:Createby"></span>
                </div>
                <div class="fl text-center fiften-days">
                    <p>
                        <font>
                            Phần mềm quản lý bán hàng - Open24<br />
                        </font>
                        Quản lý mọi lúc, mọi nơi trên mọi thiết bị. Chỉ với 89.000 đ/ tháng.
                    </p>
                    <div class="fl bnt-news1">
                        <a class="trial" href="/dung-thu-mien-phi" >
                            Đăng kí dùng thử miễn phí 15 ngày
                        </a>
                    </div>
                </div>
                <div class="related-news fl">
                    <div class="fl carenews" style="padding-top: 1%;">
                        <div class="fb-like" data-href='@ViewBag.httpUrl' data-layout="button_count" data-action="like" data-size="small" data-show-faces="true" data-share="true"></div>
                    </div>
                    <div class="fb-comments" data-href='@ViewBag.httpUrl' data-numposts="5" data-width="100%"></div>
                </div>
            </div>

            <div class="col-md-3">


                <div class="title-viewnews fl">
                    Khách hàng gần đây nhất
                </div>
                <div class="view-news fl">
                    <!--ko foreach: listNews -->
                    <div class="content-viewnews fl">
                        <div class="left-viewnews">
                            <a data-bind="attr:{href: Url, title: Note, id:ID, src: Images}">
                                <img data-bind="attr:{src: Images}" alt="Ảnh khách hàng">
                            </a>
                         
                        </div>                          
                        <div class="content-news">
                            <div class="title-news-right">
                                <a class="bold" id="valTitleHome" data-bind="attr: { href: Url, title: Note, id:ID }, text: Name"></a>
                            </div>
                            <div class="time-news">
                                <i class="fa fa-clock-o"></i>
                                <span data-bind="text:ConvertDate(CreatedDate)" />

                            </div>
                        </div>
                    </div>
                    <!--/ko-->
                </div>


                <div class="view-news fl">
                    @Html.Partial("PageFacebookPartial")
                </div>
            </div>
        </div>
    </div>
</div>

