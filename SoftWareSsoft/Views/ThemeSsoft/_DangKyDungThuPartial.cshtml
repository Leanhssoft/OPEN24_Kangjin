
<div class="modal fade" id="ModalDangKyDungThuSsoft" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">

        <div class="modal-content draggable">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">
                   Đăng ký dùng thử
                </h4>
            </div>
            <div class="modal-body">
                <div class="col-md-12 row">
                    <span style="float:right;color:red">{{error}}</span>

                    <div class="form-group fl margin-bot-15">
                        <label> Họ và tên (<span style="color:red">*</span>) </label>
                        <div class="form-wrap">
                            <input type="text" class="form-control dk-ho-ten"  v-model="HoVaTen" >
                        </div>
                    </div>
                    <div class="form-group fl margin-bot-15">
                        <label>Điện thoại (<span style="color:red">*</span>)</label>
                        <div class="form-wrap">
                            <input type="text" class="form-control"  id="phoneNumber" >
                        </div>
                    </div>
                    <div class="form-group fl margin-bot-15">
                        <label>Email </label>
                        <div class="form-wrap">
                            <input type="text" class="form-control" v-model="Email" >
                        </div>
                    </div>
                    <div class="form-group fl margin-bot-15">
                        <label>Tỉnh thành(<span style="color:red">*</span>)</label>
                        <div class="form-wrap">
                          <select class="form-control" id="select-tinhthanh">
                              <option v-for="(item, index) in ListTinhThanh" v-bind:value="item.Key">{{item.Value}}</option>
                              </select>
                        </div>
                    </div>
                    <div class="form-group fl margin-bot-15">
                        <label>Ghi chú</label>
                        <div class="form-wrap">
                            <textarea type="text" rows="4" v-model="GhiChu"></textarea>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="col-md-12">
                    <div class="form-group">
                        <label></label>
                        <div class="form-wrap">
                            <button type="button" class="btn btn-main-color btn-dang-ky " v-on:click="Save"><i class="fa fa-shopping-cart" aria-hidden="true" ></i>Đăng ký</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#phoneNumber').inputmask('Regex', { regex: "^[0-9]{1,11}(\\.\\d{1,2})?$" });
    })
</script>